<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity3">

  <androidx.appcompat.widget.Toolbar
      android:background="@color/purple_500"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/categorynametitle"
          android:textColor="@color/white"
          android:textSize="22dp"
          android:text="Category name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"></TextView>
      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/circleimageviewcategory"
          android:layout_marginRight="15dp"
          android:layout_alignParentEnd="true"
          android:layout_width="30dp"
          android:layout_height="30dp"></de.hdodenhof.circleimageview.CircleImageView>
    </RelativeLayout>
  </androidx.appcompat.widget.Toolbar>

  <LinearLayout
      android:layout_margin="10dp"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/placeholder"
        android:id="@+id/imageviewopengallery2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp"></ImageView>
    <EditText
        android:background="@drawable/edittextproductshape"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:hint="Enter product name"
        android:id="@+id/edittexproductname"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:background="@drawable/edittextproductshape"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:hint="Price"
        android:id="@+id/edittexprice"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:background="@drawable/edittextproductshape"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:hint="Description"
        android:id="@+id/edittexDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>

    <ProgressBar
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:id="@+id/progressBarhorizontalac3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" ></ProgressBar>

    <TextView
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textSize="40dp"
        android:text="0%"
        android:id="@+id/textviewprogressac3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:text="Add Product"
        android:id="@+id/buttonaddproduct"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
  </LinearLayout>



  </LinearLayout>